// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Catppuccin Mocha - No Italics",
  // Appearance:
  "buffer_font_family": "Comic Code Ligatures",
  "buffer_line_height": "standard",
  "buffer_font_size": 16,
  "ui_font_size": 16,

  // "experimental.theme_overrides": {
  //   "background.appearance": "transparent",
  //   "background": "#4c464290",
  //   "editor.background": "#00000050",
  //   "scrollbar.track.background": "#00000050",
  //   "editor.gutter.background": "#00000050",
  //   "tab_bar.background": "#00000050",
  //   "terminal.background": "#00000050",
  //   "toolbar.background": "#00000050",
  //   "tab.active_background": "#28282820",
  //   "tab.inactive_background": "#00000000",
  //   "status_bar.background": "#00000050",
  //   "title_bar.background": "#00000050",
  //   "panel.background": "#00000050",
  //   "border.variant": "#00000000",
  //   "scrollbar.track.border": "#00000000",
  //   "editor.active_line.background": "#00000000"
  // },

  // Line Settings:
  "preferred_line_length": 100,
  "show_wrap_guides": true,
  "soft_wrap": "preferred_line_length",
  "relative_line_numbers": true,
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,

  // General:
  "git": {
    "git_gutter": "hide",
    "inline_blame": {
      "enabled": false
    }
  },
  "vim_mode": true,
  "show_copilot_suggestions": false,
  "format_on_save": "on",
  "use_autoclose": false,
  "always_treat_brackets_as_autoclosed": true,

  // Terminal Settings:
  "terminal": {
    "line_height": "standard",
    "copy_on_select": true,
    "env": {
      "IS_VSCODE": "true"
    }
  }
}
