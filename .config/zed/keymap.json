  {
    "bindings": {
      "ctrl-f ;": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-j": "zed::IncreaseBufferFontSize",
      "ctrl-shift-k": "zed::DecreaseBufferFontSize"
    }
  },
  {
    "context": "Editor && vim_mode != insert",
    "bindings": {
      "shift-k": "editor::Hover"
    }
  },
